@model WebLabMVC.Models.Genre

@{
    ViewData["Title"] = "Деталі жанру";
}

<div class="container mt-5">
    <section class="text-center mb-5">
        <div class="card shadow-lg border-0">
            <div class="card-body p-4">
                <h1 class="display-5 fw-bold mb-4">@Model.Name</h1>
            </div>
        </div>
    </section>

    <section id="details" class="mb-5">
        <h2 class="fw-bold mb-4">Інформація про жанр</h2>
        <ul class="list-group list-group-flush fs-5">
            <li class="list-group-item">
                <strong>Автори:</strong>
                @if (Model.Authors != null && Model.Authors.Any())
                {
                    @string.Join(", ", Model.Authors.Select(a => a.FullName))
                }
                else
                {
                    <span>Не вказано</span>
                }
            </li>

            <li class="list-group-item">
                <strong>Книги у цьому жанрі:</strong>
                @if (Model.Books != null && Model.Books.Any())
                {
                    @string.Join(", ", Model.Books.Select(b => b.Title))
                }
                else
                {
                    <span>Не вказано</span>
                }
            </li>
        </ul>
    </section>

    <div class="text-center my-5">
        <a asp-controller="Genres" asp-action="Index" class="btn btn-secondary me-2">← Назад</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">Редагувати</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Видалити</a>
    </div>
</div>