@model WebLabMVC.Models.Author

@{
    ViewData["Title"] = "Деталі автора";
}

<h1>Деталі автора</h1>

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Ім’я</dt>
            <dd class="col-sm-8">@Model.FullName</dd>

            <dt class="col-sm-4">Країна</dt>
            <dd class="col-sm-8">
                @if (!string.IsNullOrEmpty(Model.Country))
                {
                    @Model.Country
                }
                else
                {
                    <span>Не вказано</span>
                }
            </dd>

            <dt class="col-sm-4">Жанри</dt>
            <dd class="col-sm-8">
                @if (Model.Genres != null && Model.Genres.Any())
                {
                    @string.Join(", ", Model.Genres.Select(g => g.Name))
                }
                else
                {
                    <span>Не вказано</span>
                }
            </dd>

            <dt class="col-sm-4">Книги</dt>
            <dd class="col-sm-8">
                @if (Model.Books != null && Model.Books.Any())
                {
                    foreach (var book in Model.Books)
                    {
                        <div>
                            <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id">
                                @book.Title
                            </a>
                        </div>
                    }
                }
                else
                {
                    <span>Не вказано</span>
                }
            </dd>
        </dl>

        <div class="form-group mt-3">
            <a asp-controller="Authors" asp-action="Index" class="btn btn-secondary">Повернутися до списку авторів</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редагувати</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger">Видалити</a>
        </div>
    </div>
</div>