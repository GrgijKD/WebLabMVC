@model WebLabMVC.Models.Author

@{
    ViewData["Title"] = "Деталі автора";
}

<div class="container mt-5">
    <section class="text-center mb-5">
        <div class="card shadow-lg border-0">
            <div class="card-body p-4">
                <h1 class="display-5 fw-bold mb-4">@Model.FullName</h1>
                <p class="fs-5 text-muted">Країна: @(string.IsNullOrEmpty(Model.Country) ? "Не вказано" : Model.Country)</p>
            </div>
        </div>
    </section>

    <section id="details" class="mb-5">
        <h2 class="fw-bold mb-4">Інформація про автора</h2>
        <ul class="list-group list-group-flush fs-5">
            <li class="list-group-item">
                <strong>Жанри:</strong>
                @if (Model.Genres != null && Model.Genres.Any())
                {
                    @string.Join(", ", Model.Genres.Select(g => g.Name))
                }
                else
                {
                    <span>Не вказано</span>
                }
            </li>

            <li class="list-group-item">
                <strong>Книги автора:</strong>
                @if (Model.Books != null && Model.Books.Any())
                {
                    @string.Join(", ", Model.Books.Select(b => b.Title))
                }
                else
                {
                    <span>Не вказано</span>
                }
            </li>
        </ul>
    </section>

    <div class="text-center my-5">
        <a asp-controller="Authors" asp-action="Index" class="btn btn-secondary me-2">← Назад</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">Редагувати</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Видалити</a>
    </div>
</div>