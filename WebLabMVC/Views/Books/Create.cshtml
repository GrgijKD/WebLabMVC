@model WebLabMVC.Models.Book

@{
    ViewData["Title"] = "Додавання книги";
}

<h1>Додати книгу</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Title" class="control-label">Назва</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Genres" class="control-label">Жанр*</label>
                <select id="Genres" name="Genres" asp-items="ViewBag.Genres" multiple="multiple" class="form-control"></select>
                <span asp-validation-for="Genres" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Authors" class="control-label">Автор*</label>
                <select id="Authors" name="Authors" asp-items="ViewBag.Authors" multiple="multiple" class="form-control"></select>
                <span asp-validation-for="Authors" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PublisherId" class="control-label">Видавництво</label>
                <select asp-for="PublisherId" asp-items="ViewBag.Publishers" class="form-control">
                    <option value="">Не вказано</option>
                </select>
                <span asp-validation-for="PublisherId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label d-block" for="coverFile">Обкладинка (зображення)</label>
                <div class="input-group">
                    <label for="coverFile" class="btn btn-outline-primary mb-0">
                        Вибрати файл
                    </label>
                    <input id="coverFile" name="coverFile" type="file" style="display:none;" />
                    <span id="file-name" class="ms-2 text-muted">Файл не вибрано</span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label">Ціна</label>
                <input asp-for="Price" id="Price" class="form-control"
                       type="text"
                       placeholder="9.99" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Додати" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <p>*Можна обрати декілька авторів/жанрів або прибрати обрані за допомогою ЛКМ+Ctrl</p>
</div>
<div>
    <a asp-controller="Books" asp-action="Index" class="btn btn-secondary mt-2">Повернутися до списку книг</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        $("#coverFile").change(function () {
            const file = this.files[0];
            $("#file-name").text(file ? file.name : "Файл не вибрано");
        });

        $("#Price").keypress(function (e) {
            var char = String.fromCharCode(e.which);
            var value = $(this).val();

            if (char.match(/[0-9]/)) {
                return true;
            }

            if ((char === '.' || char === ',') && value.indexOf('.') === -1 && value.indexOf(',') === -1 && value.length > 0) {
                return true;
            }

            return false;
        });

        $(document).ready(function () {
            $.validator.addMethod("pricevalid", function (value, element) {
                if (!value) return false;
                var val = value.replace(',', '.');
                var price = parseFloat(val);
                return !isNaN(price) && price >= 0.01 && price <= 999999.99;
            }, "Ціна має бути від 0.01 до 999999.99");

            $("#Price").rules("add", {
                required: true,
                pricevalid: true
            });
        });
    </script>
}