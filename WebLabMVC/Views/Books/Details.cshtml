@model WebLabMVC.Models.Book

@{
    ViewData["Title"] = "Деталі книги";
}

<div class="container mt-5">
    <section class="text-center mb-5" id="top">
        <div class="card shadow-lg border-0">
            <div class="card-body p-4">
                <h1 class="display-5 fw-bold mb-4">@Model.Title</h1>
                <img src="@Model.CoverUrl" alt="Обкладинка книги" class="img-fluid" style="max-height: 400px;">
                <p class="mt-3 fs-4 text-muted">Ціна: <strong class="text-dark">@Model.Price ₴</strong></p>
            </div>
        </div>
    </section>

    <section id="details" class="mb-5">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2 class="fw-bold mb-4">Інформація про книгу "@Model.Title"</h2>
                <ul class="list-group list-group-flush fs-5">
                    <li class="list-group-item">
                        <strong>Жанр(и):</strong>
                        @if (Model.Genres != null && Model.Genres.Any())
                        {
                            @string.Join(", ", Model.Genres.Select(g => g.Name))
                        }
                        else
                        {
                            <span>Не вказано</span>
                        }
                    </li>

                    <li class="list-group-item">
                        <strong>Автор(и):</strong>
                        @if (Model.Authors != null && Model.Authors.Any())
                        {
                            @string.Join(", ", Model.Authors.Select(a => a.FullName))
                        }
                        else
                        {
                            <span>Не вказано</span>
                        }
                    </li>

                    <li class="list-group-item">
                        <strong>Видавництво:</strong>
                        @(Model.Publisher != null ? Model.Publisher.Name : "Не вказано")
                    </li>
                </ul>
            </div>

            <div class="col-md-6 text-center">
                <img src="@Model.CoverUrl" alt="Обкладинка" class="img-fluid mt-3" style="max-height: 350px;">
            </div>
        </div>
    </section>

    <section id="shops" class="mb-5">
        <h2 class="fw-bold mb-4 text-center">Наявність у магазинах</h2>
        @if (Model.Shops != null && Model.Shops.Any())
        {
            <div class="row">
                @foreach (var shop in Model.Shops)
                {
                    <div class="col-md-4 mb-3">
                        <div class="card shadow-sm border-0 h-100">
                            <div class="card-body">
                                <h5 class="card-title">@shop.Name</h5>
                                <p class="card-text text-muted">Координати: @shop.Latitude, @shop.Longitude</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-center text-muted">Немає в наяності</p>
        }
    </section>

    <div class="text-center my-5">
        <a asp-controller="Books" asp-action="Index" class="btn btn-secondary me-2">← Повернутися до списку</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">Редагувати</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Видалити</a>
    </div>
</div>